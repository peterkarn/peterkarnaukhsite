
@import '_spec.styl';

body {
	font-family: 'Open Sans', sans-serif;
	font-size: 11px;
	color: ligrey;
	line-height: 1.6em;
	letter-spacing: 0.04em;
}

.container {
	max-width: 1230px;
	padding: 0 30px;
	margin: 0 auto;
	background-color: inherit;
}

.container-fluid
	max-width 100%
	margin 0 auto

.header {
	background: url('../img/header/hbg.jpg');
	background-size: cover;
	color: wh;
	padding: 20px 0 1px;

	.logo {
		width: 90px;
		height: 20px;
		margin-right: 35px;
	}
}

.navbar {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.tagline {
	margin-right: auto;
	width: 126px;
	opacity: 0.3;
	color: wh;
	font-family: fflatoit;
	font-size: 14px;
	font-weight: 400;
}

.menu {
	&__list {
		display: -webkit-flex;
		display: -moz-flex;
		display: -ms-flex;
		display: -o-flex;
		display: flex;
	}

	&__item {
		font-family: 'Lato', sans-serif;
		font-weight: 400;
		font-size: 12px;
		font-weight: 400;

		&:not(:last-child) {
			margin-right: 34px;
		}
	}
}

.offer {
	margin-top: 267px;
	text-align: center;
	font-family: 'Lato';

	&__title {
		font-size: 62px;
		font-weight: 700;
	}

	&__subtitle {
		opacity: 0.9;
		color: wh;
		font-size: 48px;
		font-weight: 400;
		margin-top: 45px;
	}

	&__badge {
		font-size: 18px;
		font-weight: 400;
		width: 372px;
		margin: 43px auto;
		position: relative;

		&:before {
			content: '';
			width: 33px;
			height: 1px;
			background-color: blu;
			position: absolute;
			top: 11px;
			left: 0px;
		}

		&:after {
			content: '';
			width: 33px;
			height: 1px;
			background-color: blu;
			position: absolute;
			top: 11px;
			left: 342px;
		}
	}

	span {
		color: blu;
	}
}

.links {
	display: block;
	margin: 113px auto;
	width: 110px;
	display: flex;
	justify-content: space-between;
	transition: 0.5s all ease;
	font-size: 18px;

	&__item {
		opacity: 30%;
		transition: 0.5s all ease;

		&:hover {
			opacity: 100%;
		}
	}
}

.section-title {
	color: blu;
	font-family: 'Lato';
	font-size: 28px;
	font-weight: 900;
	text-transform: uppercase;
	margin: 0 auto;
	position: relative;
