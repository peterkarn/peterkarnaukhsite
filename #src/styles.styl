.section-subtitle
	margin 0 auto
	width 600px
	margin-top 100px
	text-align center
	font-size: 15px
	font-weight: 300
	font-family: Lato
	max-width: 800px
.features {
	padding: 75px 0 114px;
	background: #efefef;
	color: #7f8b95;
	font-size: 11px;

	&__inner {
		display: flex;
		justify-content: space-between;
		margin-top: 115px;
	}
}

.card {
	display: flex;
	max-width: 300px;
	align-items: flex-start;
	transition: 0.5s all ease;

	&__body {
		margin-left: 15px;
	}

	&__title {
		color: dark;
		font-size: 17px;
		font-weight: 400;
	}

	&__image {
		border: 1px solid blu;
		border-radius: 20px;
		padding: 7px;
	}

	&__text {
		margin-top: 17px;
		opacity: 0.7;
		color: dark;
		font-size: 11px;
		font-weight: 400;
	}
}

.device {
	background-color: #ffffff;
	padding: 77px 0;

	&__column {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		width: 300px;
		height: 84%;
		padding-top: 45px;
	}

	&__title {
		color: #282528;
		font-size: 15px;
		font-weight: 400;
		line-height: 2em;
		max-width: 782px;
		margin: 0 auto;
		text-align: center;
	}

	&__inner {
		display: flex;
		justify-content: space-between;
		margin-top: 68px;
		background-image: url('../img/features/iphone.png');
		background-repeat: no-repeat;
		background-position: center 0;
		height: 600px;
		width: 100%;
	}

	&__card {
		user-select: none;
		padding: 15px 0;

		.card {
			&__image {
				width: 38px;
				border: none;
				border-radius: 0;
			}

			&__title {
				color: #282528;
				font-size: 13px;
				font-weight: 700;
			}

			&__body {
				padding-left: 24px;
			}
		}

		&:hover {
			background-color: #fefce9;
		}
	}
}

.works {
	padding: 10px 0 0 0;
	background-color: #fff;
}


.button-group
	max-width 30%
	margin 87px auto
	display flex
	justify-content space-between
.grid
	display flex
	flex-wrap wrap
	min-height: 520px
	&__img
		width 25%
.button 
	color dark
	font-family Lato, sans-serif
	padding 10px 20px
	font-size 14px
	font-weight 900
	border none
	background-color transparent
	cursor pointer
	border-radius 10px
	outline none
	transition .5s all ease
	:active
	&.is-checked 
		background-color: blu
		color: white
	&:hover
		background-color: blu
		color wh
.team
	padding 108px 0
	background-color wh
	&__wrap
		display flex
		justify-content space-between
		margin-top 100px
	.container
		width 973px
		padding 0
.person
	text-align center
	position relative
	&__name
		margin-top 15px
		font-size 15px
		font-weight 600
		color: #062033;
		transition: .3s all ease
	&__hover
		position absolute
		opacity 0
		width 100%
		height 83%
		background rgba(31,131,243, 0.85)
		top 0
		color #ffffff
		display flex
		justify-content start
		flex-direction: column
		font-size: 13px
		padding 20px
		transition: .3s all ease
	&__firstline
		font-weight: 700;
		margin-bottom 5px
	&__secline
		flex-basis: 73%;
	i
		font-size 20px
		display inline-block
		width 35px
		height 35px
		background-color #3b57b2
		line-height 35px
	&:hover
		.person__name
			color: #45c5ac 	
		.person__hover
			opacity 1

.facts
	background url('/img/facts/bg.jpg')
	background-size cover
	padding 75px 0 118px
	color: #fff
	&__title
		color: #4c76ff;
	&__row
		display flex
		max-width 780px
		margin 0 auto
		justify-content space-between
		margin-top 80px
.item
	text-align center
	display flex
	flex-direction: column
	align-items center
	&__img
		width 98px
		height 98px
		border-radius 50%
		border: 2px solid #ffffff;
		display flex
		align-items center
		justify-content center
	&__num
		margin-top 38px
		font-size: 45px
		margin-bottom 14px
	&__text
		text-transform uppercase
		font-size 13px


.discuss
	padding-top 78px
	padding-bottom 89px
	&__wrap
		display flex
		margin-top 78px
	&__links
		display flex
		flex-direction: column
		justify-content space-evenly
		margin-left 50px
		a
			&:hover
				transform: scale(1.5, 1.5)
		
.adress
	color: #6a737b;
	flex-basis: 205px
	margin-right 40px
	line-height: 2.5em
	&__title
		color: #062033;
		font-size: 18px;
		margin-bottom 23px
	&__text
		font-size: 11px;
.form	
	&__title
		color: #062033;
		font-size: 20px;
		font-weight: 700;
	&__body
		width 640px
		margin-top 35px
		input 
			border-bottom 1px solid #cccccc
			width 48%
			padding-bottom 15px
			margin-bottom 17px
		textarea
			width 100%
			border-bottom 1px solid #cccccc
			padding 10px 13px 0 0
		button
			padding-left 30px
			background url('/img/discuss/Envelope.svg') center left no-repeat
			width: 125px
			font-size 14px
			color #000000
			cursor: pointer
			margin-left auto
			display block
			margin-top 20px
			transition 0.3s all ease
			&:hover
				transform: scale(0.8, 0.8)

.footer
	padding: 52px 0 93px
	color: #ffffff
	line-height 2.5em
	background-color #000
	&__wrap
		display flex
		justify-content space-between
	&__col
		width 27%
		color: #cccdcd
	&__descr
		margin-top 25px
	&__label
		font-size 18px
		font-weight 900
	&__form
		position relative
		max-width 245px
		margin-top 36px
		input
			width 100%
			height: 42px;
			border: 2px solid #ffffff;
			padding 5px
		button
			color: #ffffff
			position absolute
			right: 10px;
			top: 1px;
			font-size: 23px;
			cursor: pointer
	&__links
		display flex
		margin-top 25px
		.col	
			display flex
			flex-direction: column
		.col_left
			margin-right 30px	
