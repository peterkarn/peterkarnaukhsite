a
	color inherit
	text-decoration none
	font-family inherit
	transition 0.5s all ease
	&:visited
		color inherit

*
	box-sizing border-box

img
	max-width 100%

h1, h2, h3, h4, h5, h6
	line-height normal

input, button, textarea, form
	color: inherit 
	font-family inherit
	border none
	background transparent
	outline: none
	resize none
	padding 0
	margin 0